{
  "name": "my-electron-app",
  "version": "0.1.0",
  "private": false,
  "homepage": "./",
  "main": "public/electron.js",
  "type": "module",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "jquery": "^3.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "react-scripts": "5.0.1",
    "wait-on": "^7.2.0",
    "web-vitals": "^2.1.4",
    "chart.js": "^4.4.1",
    "font-awesome": "^4.7.0",
    "react-chartjs-2": "^5.2.0",
    "react-froala-wysiwyg": "^4.1.4",
    "react-quill": "^2.0.0"
  },
  "scripts": {
    "both": "concurrently \"npm start\" \"npm run start-electron\"",
    "start-electron": "wait-on http://127.0.0.1:3000  && electron .",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package-mac": "npm run build  && electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "npm run build  && electron-packager . MyApp --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds",
    "package-linux": "npm run build  && electron-packager . MyApp --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "publish": "electron-builder build --mac --win --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "",
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^3.0.1",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "mac": {
      "publish": {
        "provider": "github",
        "owner": "MrKkyle",
        "repo": "Repository Name",
        "private": false,
        "token": ""
      }
    },
    "win": {
      "publish": {
        "provider": "github",
        "owner": "MrKkyle",
        "repo": "Repository Name",
        "private": false,
        "token": ""
      }
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "private": false,
      "owner": "MrKkyle"
    }
  }
}
